<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:axon="http://www.axonframework.org/schema/core"
       xsi:schemaLocation="
            http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
            http://www.axonframework.org/schema/core http://www.axonframework.org/schema/axon-core.xsd">

    <axon:annotation-config />

    <axon:command-bus id="commandBus" transaction-manager="transactionManager">
        <axon:dispatchInterceptors>
            <bean class="cz.cvut.fel.integracniportal.command.node.AddUserCommandDispatchInterceptor"/>
        </axon:dispatchInterceptors>
    </axon:command-bus>

    <axon:event-bus id="eventBus"/>

    <!--<axon:filesystem-event-store id="eventStore" base-dir="events"/>-->

    <bean id="eventStoreSchema" class="org.axonframework.eventstore.jdbc.PostgresEventSqlSchema"/>
    <bean id="eventEntryStore" class="org.axonframework.eventstore.jdbc.DefaultEventEntryStore" >
        <constructor-arg name="dataSource" ref="dataSource"/>
        <constructor-arg name="sqlSchema" ref="eventStoreSchema"/>
    </bean>
    <axon:jdbc-event-store id="eventStore" data-source="dataSource" event-entry-store-ref="eventEntryStore"/>

    <bean class="org.axonframework.commandhandling.gateway.DefaultCommandGateway">
        <constructor-arg name="commandBus" ref="commandBus"/>
        <constructor-arg name="commandDispatchInterceptors">
            <list></list>
        </constructor-arg>
    </bean>

    <axon:saga-manager id="sagaManager">
        <axon:types>
            cz.cvut.fel.integracniportal.domain.user.saga.UserEmailVerificationSaga
            cz.cvut.fel.integracniportal.domain.user.saga.RestoreLostUserPasswordSaga
        </axon:types>
    </axon:saga-manager>

    <bean class="org.axonframework.eventhandling.scheduling.java.SimpleEventSchedulerFactoryBean">
        <property name="transactionManager" ref="transactionManager" />
    </bean>

    <axon:event-sourcing-repository id="userAggregateRepository" event-bus="eventBus" event-store="eventStore"
                                    aggregate-type="cz.cvut.fel.integracniportal.domain.user.User"/>
    <axon:event-sourcing-repository id="userRoleAggregateRepository" event-bus="eventBus" event-store="eventStore"
                                    aggregate-type="cz.cvut.fel.integracniportal.domain.userrole.UserRole"/>
    <axon:event-sourcing-repository id="fileAggregateRepository" event-bus="eventBus" event-store="eventStore"
                                    aggregate-type="cz.cvut.fel.integracniportal.domain.node.File"/>
    <axon:event-sourcing-repository id="folderAggregateRepository" event-bus="eventBus" event-store="eventStore"
                                    aggregate-type="cz.cvut.fel.integracniportal.domain.node.Folder"/>
    <axon:event-sourcing-repository id="labelAggregateRepository" event-bus="eventBus" event-store="eventStore"
                                    aggregate-type="cz.cvut.fel.integracniportal.domain.label.Label"/>
    <axon:event-sourcing-repository id="groupAggregateRepository" event-bus="eventBus" event-store="eventStore"
                                    aggregate-type="cz.cvut.fel.integracniportal.domain.group.Group"/>
    <axon:event-sourcing-repository id="orgUnitAggregateRepository" event-bus="eventBus" event-store="eventStore"
                                    aggregate-type="cz.cvut.fel.integracniportal.domain.organizationalunit.OrganizationalUnit"/>

</beans>
